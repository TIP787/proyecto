<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tvTituloPE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pago Especifico"
        android:textSize="35sp"
        android:layout_marginBottom="25dp"
        android:gravity="center_horizontal"
        android:fontFamily="serif"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFechaPE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:text="Ultimo Pago"
            android:textSize="20sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/etFechaPE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="Ultimo Pago"
            android:padding="8dp"
            android:textSize="20sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvMontoPE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:text="Monto"
            android:textSize="20sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/etMontoPE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:hint="Monto"
            android:padding="8dp"
            android:textSize="20sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvSocioPE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:text="Socio"
            android:textSize="20sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/etSocioPE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:hint="Socio"
            android:padding="8dp"
            android:textSize="20sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEditarPE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="EDITAR"
            android:textSize="18sp"
            android:padding="16dp" />

        <Button
            android:id="@+id/btnGuardarPE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Guardar"
            android:visibility="gone"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/btnEliminarPE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ELIMINAR"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
