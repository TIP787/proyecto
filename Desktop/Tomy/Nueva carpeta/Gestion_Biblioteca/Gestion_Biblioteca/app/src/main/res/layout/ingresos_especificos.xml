<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tvTituloIE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresos Especificos"
        android:textSize="35sp"
        android:layout_marginBottom="25dp"
        android:gravity="center_horizontal"
        android:fontFamily="serif"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/tvFechaIE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:visibility="visible" />

        <EditText
            android:id="@+id/etFechaIE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha"
            android:padding="8dp"
            android:textSize="20sp"
            android:gravity="start"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvMotivosIE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Motivo"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:visibility="visible" />

        <EditText
            android:id="@+id/spinnerOpciones3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            android:padding="8dp"
            android:textSize="20sp"
            android:gravity="start"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvMontoIE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monto"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:visibility="visible" />

        <EditText
            android:id="@+id/etMontoIE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Monto"
            android:padding="8dp"
            android:textSize="20sp"
            android:gravity="start"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvObservacionesIE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Observaciones"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:visibility="visible" />

        <EditText
            android:id="@+id/etObservacionesIE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Observaciones"
            android:padding="8dp"
            android:textSize="20sp"
            android:gravity="start"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEditarIE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="EDITAR"
            android:textSize="18sp"
            android:padding="16dp" />

        <Button
            android:id="@+id/btnGuardarIE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Guardar"
            android:visibility="gone"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/btnEliminarIE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ELIMINAR"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>