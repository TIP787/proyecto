<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tvTituloS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Libro Retirado"
        android:textSize="35sp"
        android:layout_marginBottom="25dp"
        android:gravity="center_horizontal"
        android:fontFamily="serif"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/tvFechaRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:visibility="visible" />

        <EditText
            android:id="@+id/etFechaRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha"
            android:padding="8dp"
            android:textSize="20sp"
            android:gravity="start"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvCodigoRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Codigo"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:visibility="visible" />

        <EditText
            android:id="@+id/etCodigoRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Codigo"
            android:padding="8dp"
            android:textSize="20sp"
            android:gravity="start"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvLibroRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Libro"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:visibility="visible" />

        <EditText
            android:id="@+id/etLibroRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Libro"
            android:padding="8dp"
            android:textSize="20sp"
            android:gravity="start"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvSocioRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Socio"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:visibility="visible" />

        <EditText
            android:id="@+id/etSocioRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Socio"
            android:padding="8dp"
            android:textSize="20sp"
            android:gravity="start"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTelefonoRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefono"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:visibility="visible" />

        <EditText
            android:id="@+id/etTelefonoRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Telefono"
            android:padding="8dp"
            android:textSize="20sp"
            android:gravity="start"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEditarRL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="EDITAR"
            android:textSize="18sp"
            android:padding="16dp" />

        <Button
            android:id="@+id/btnGuardarRL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Guardar"
            android:visibility="gone"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/btnEliminarRL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ELIMINAR"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>